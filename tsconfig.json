{
  "compilerOptions": {
    "target": "esnext",
    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": ".",
    /* JavaScript Support */
    "allowJs": true,
    /* Emit */
    "outDir": "build",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Type Checking */
    "strict": true,
    "noImplicitAny": true
  }
}